unit UDie;

interface

type
  TDie=class
private
  faceValue:Integer;
const MAX=6;
public
  procedure roll;
  function getFaceValue:integer;
published
constructor create;
  end;

implementation

{ TDie }



constructor TDie.create;
begin
  roll;
end;

procedure TDie.getFaceValue;
begin
  result:=faceValue;
end;

procedure TDie.roll;
begin
  faceValue=random(MAX)+1;
end;

end.
